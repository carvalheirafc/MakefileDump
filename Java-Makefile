##This is a Java Makefile 
## By Carvalheirafc

BINDIR = bin
SRCDIR = source
TESTDIR = test

CC = javac
CCFLAGS = -sourcepath $(SRCDIR):* -d $(BINDIR)

SRCFILES = $(wildcard $(SRCDIR)/*.java)

$(info SRCFILES="$(SRCFILES)")

CLASSES = $(patsubst $(SRCDIR)/%.java, %.class, $(SRCFILES))
$(info CLASSES="$(CLASSES)")

all: $(CLASSES)

%.class: $(SRCDIR)/%.java
	$(CC) $(CCFLAGS) $<


clean: 
	rm -f $(BINDIR)/*.class 
